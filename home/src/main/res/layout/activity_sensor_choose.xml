<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/common_status_bar" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/titleView_height">

            <View
                android:id="@+id/view_back"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_type"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.lihang.ShadowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    app:hl_cornerRadius="5dp"
                    app:hl_shadowColor="@color/shadow_color"
                    app:hl_shadowLimit="4dp"
                    app:hl_shadowOffsetY="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="34dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/time"
                            android:textColor="@color/main_color"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/line_colors" />

                        <TextView
                            android:id="@+id/tv_sport_time"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/time_sport"
                            android:textColor="@color/black_3"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/line_colors" />

                        <TextView
                            android:id="@+id/tv_total_time"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/total_time_details"
                            android:textColor="@color/black_3"
                            android:textSize="14sp" />
                    </LinearLayout>
                </com.lihang.ShadowLayout>

                <com.lihang.ShadowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    app:hl_cornerRadius="5dp"
                    app:hl_shadowColor="@color/shadow_color"
                    app:hl_shadowLimit="4dp"
                    app:hl_shadowOffsetY="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="34dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/distance"
                            android:textColor="@color/main_color"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/line_colors" />

                        <TextView
                            android:id="@+id/tv_sport_distance"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/distance_sport"
                            android:textColor="@color/black_3"
                            android:textSize="14sp" />

                    </LinearLayout>
                </com.lihang.ShadowLayout>

                <com.lihang.ShadowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    app:hl_cornerRadius="5dp"
                    app:hl_shadowColor="@color/shadow_color"
                    app:hl_shadowLimit="4dp"
                    app:hl_shadowOffsetY="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="34dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/speed"
                            android:textColor="@color/main_color"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/line_colors" />

                        <TextView
                            android:id="@+id/tv_speed"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/speed"
                            android:textColor="@color/black_3"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/line_colors" />

                        <TextView
                            android:id="@+id/tv_average_speed"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/average_speed"
                            android:textColor="@color/black_3"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/line_colors" />

                        <TextView
                            android:id="@+id/tv_max_speed"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/maximum_speed"
                            android:textColor="@color/black_3"
                            android:textSize="14sp" />

                    </LinearLayout>
                </com.lihang.ShadowLayout>

                <com.lihang.ShadowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    app:hl_cornerRadius="5dp"
                    app:hl_shadowColor="@color/shadow_color"
                    app:hl_shadowLimit="4dp"
                    app:hl_shadowOffsetY="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="34dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/cadence"
                            android:textColor="@color/main_color"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/line_colors" />

                        <TextView
                            android:id="@+id/tv_cadence"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/cadence"
                            android:textColor="@color/black_3"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/line_colors" />

                        <TextView
                            android:id="@+id/tv_average_cadence"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/average_cadence"
                            android:textColor="@color/black_3"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/line_colors" />

                        <TextView
                            android:id="@+id/tv_max_cadence"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/maximum_cadence"
                            android:textColor="@color/black_3"
                            android:textSize="14sp" />

                    </LinearLayout>
                </com.lihang.ShadowLayout>

                <com.lihang.ShadowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    app:hl_cornerRadius="5dp"
                    app:hl_shadowColor="@color/shadow_color"
                    app:hl_shadowLimit="4dp"
                    app:hl_shadowOffsetY="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="34dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/heart_rate"
                            android:textColor="@color/main_color"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/line_colors" />

                        <TextView
                            android:id="@+id/tv_heart_rate"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/heart_rate"
                            android:textColor="@color/black_3"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/line_colors" />

                        <TextView
                            android:id="@+id/tv_average_heart"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/average_heart_rate"
                            android:textColor="@color/black_3"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/line_colors" />

                        <TextView
                            android:id="@+id/tv_max_heart_rate"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/maximum_heart_rate"
                            android:textColor="@color/black_3"
                            android:textSize="14sp" />

                    </LinearLayout>
                </com.lihang.ShadowLayout>

                <com.lihang.ShadowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    app:hl_cornerRadius="5dp"
                    app:hl_shadowColor="@color/shadow_color"
                    app:hl_shadowLimit="4dp"
                    app:hl_shadowOffsetY="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="34dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/power"
                            android:textColor="@color/main_color"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/line_colors" />

                        <TextView
                            android:id="@+id/tv_power"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/power"
                            android:textColor="@color/black_3"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/line_colors" />

                        <TextView
                            android:id="@+id/tv_left_right_balance"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/left_right_balance"
                            android:textColor="@color/black_3"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/line_colors" />

                        <TextView
                            android:id="@+id/tv_avg_left_right_balance"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/avg_left_right_balance"
                            android:textColor="@color/black_3"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/line_colors" />

                        <TextView
                            android:id="@+id/tv_average_power"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/average_power"
                            android:textColor="@color/black_3"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/line_colors" />

                        <TextView
                            android:id="@+id/tv_maximum_power"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/maximum_power"
                            android:textColor="@color/black_3"
                            android:textSize="14sp" />

                    </LinearLayout>
                </com.lihang.ShadowLayout>

                <com.lihang.ShadowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="30dp"
                    app:hl_cornerRadius="5dp"
                    app:hl_shadowColor="@color/shadow_color"
                    app:hl_shadowLimit="4dp"
                    app:hl_shadowOffsetY="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="34dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/environment_factor"
                            android:textColor="@color/main_color"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/line_colors" />

                        <TextView
                            android:id="@+id/tv_calories"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/calories"
                            android:textColor="@color/black_3"
                            android:textSize="14sp" />
                    </LinearLayout>
                </com.lihang.ShadowLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
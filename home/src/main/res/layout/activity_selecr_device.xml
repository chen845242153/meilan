<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/add_device_bg" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/device_select_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        app:layout_constraintEnd_toEndOf="@id/iv_back"
        app:layout_constraintStart_toStartOf="@id/iv_back"
        app:layout_constraintTop_toTopOf="@id/iv_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/computer"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_back" />

    <ImageView
        android:id="@+id/iv_m1"
        android:layout_width="77dp"
        android:layout_height="125dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="51dp"
        android:src="@drawable/search_m1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="FINDER"
        android:textColor="@color/black"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="@id/iv_m1"
        app:layout_constraintStart_toStartOf="@id/iv_m1"
        app:layout_constraintTop_toBottomOf="@id/iv_m1" />

    <ImageView
        android:id="@+id/iv_m2"
        android:layout_width="77dp"
        android:layout_height="125dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="65dp"
        android:src="@drawable/search_m2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="OVAL"
        android:textColor="@color/black"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="@id/iv_m2"
        app:layout_constraintStart_toStartOf="@id/iv_m2"
        app:layout_constraintTop_toBottomOf="@id/iv_m2" />

    <ImageView
        android:id="@+id/iv_m4"
        android:layout_width="77dp"
        android:layout_height="125dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="98dp"
        android:src="@drawable/search_m4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_m1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="BLADE"
        android:textColor="@color/black"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="@id/iv_m4"
        app:layout_constraintStart_toStartOf="@id/iv_m4"
        app:layout_constraintTop_toBottomOf="@id/iv_m4" />

    <ImageView
        android:id="@+id/iv_m5"
        android:layout_width="77dp"
        android:layout_height="125dp"
        android:layout_marginTop="98dp"
        android:layout_marginEnd="65dp"
        android:src="@drawable/search_m5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_m2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="PEAK420"
        android:textColor="@color/black"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="@id/iv_m5"
        app:layout_constraintStart_toStartOf="@id/iv_m5"
        app:layout_constraintTop_toBottomOf="@id/iv_m5" />


</androidx.constraintlayout.widget.ConstraintLayout>
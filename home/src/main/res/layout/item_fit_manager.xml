<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="52dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/color_f2"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/iv_type"
        android:layout_width="19dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/black_3"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_type"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="25dp"
        android:src="@drawable/fit_manager_share"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_select"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_upload"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="25dp"
        android:src="@drawable/fit_manager_upload"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_share"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_share"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_share"
        app:layout_constraintEnd_toEndOf="@id/iv_share"
        app:layout_constraintStart_toStartOf="@id/iv_share"
        app:layout_constraintTop_toTopOf="@id/iv_share" />

    <View
        android:id="@+id/view_upload"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_upload"
        app:layout_constraintEnd_toEndOf="@id/iv_upload"
        app:layout_constraintStart_toStartOf="@id/iv_upload"
        app:layout_constraintTop_toTopOf="@id/iv_upload" />

    <View
        android:id="@+id/view_select"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_select"
        app:layout_constraintEnd_toEndOf="@id/iv_select"
        app:layout_constraintStart_toStartOf="@id/iv_select"
        app:layout_constraintTop_toTopOf="@id/iv_select" />

</androidx.constraintlayout.widget.ConstraintLayout>
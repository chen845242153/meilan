<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:gravity="center_horizontal"
            android:text="@string/countries_select"
            android:textColor="@color/black_3"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_countries"
            android:layout_width="285dp"
            android:layout_height="143dp"
            android:layout_marginTop="39dp"
            android:src="@drawable/countries_init"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <TextView
            android:id="@+id/tv_countries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/black_3"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/iv_select"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_countries" />

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="23dp"
            android:layout_height="40dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/item_arrow_right"
            app:layout_constraintBottom_toBottomOf="@id/tv_countries"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_countries"
            app:layout_constraintTop_toTopOf="@id/tv_countries" />

        <View
            android:id="@+id/view_select"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="@id/iv_select"
            app:layout_constraintEnd_toEndOf="@id/iv_select"
            app:layout_constraintStart_toStartOf="@id/iv_select"
            app:layout_constraintTop_toTopOf="@id/iv_select" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <View
            android:id="@+id/fake_status_bar_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/titleView_height"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/fake_status_bar_view" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/back"
            app:layout_constraintBottom_toBottomOf="@id/view_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/perfect_information"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/view_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/color_f2"
            app:layout_constraintTop_toBottomOf="@id/view_title" />

        <View
            android:id="@+id/view_0"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:background="@color/main_color"
            app:layout_constraintEnd_toStartOf="@id/interval_0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_title" />

        <View
            android:id="@+id/interval_0"
            android:layout_width="3dp"
            android:layout_height="5dp"
            app:layout_constraintEnd_toStartOf="@id/view_1"
            app:layout_constraintStart_toEndOf="@id/view_0"
            app:layout_constraintTop_toTopOf="@id/view_title" />

        <View
            android:id="@+id/view_1"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:background="@color/main_color"
            app:layout_constraintEnd_toStartOf="@id/interval_1"
            app:layout_constraintStart_toEndOf="@id/interval_0"
            app:layout_constraintTop_toBottomOf="@id/view_title" />

        <View
            android:id="@+id/interval_1"
            android:layout_width="3dp"
            android:layout_height="5dp"
            app:layout_constraintEnd_toStartOf="@id/view_2"
            app:layout_constraintStart_toEndOf="@id/view_1"
            app:layout_constraintTop_toTopOf="@id/view_title" />

        <View
            android:id="@+id/view_2"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:background="@color/main_color"
            app:layout_constraintEnd_toStartOf="@id/interval_2"
            app:layout_constraintStart_toEndOf="@id/interval_1"
            app:layout_constraintTop_toBottomOf="@id/view_title" />

        <View
            android:id="@+id/interval_2"
            android:layout_width="3dp"
            android:layout_height="5dp"
            app:layout_constraintEnd_toStartOf="@id/view_3"
            app:layout_constraintStart_toEndOf="@id/view_2"
            app:layout_constraintTop_toTopOf="@id/view_title" />

        <View
            android:id="@+id/view_3"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:background="@color/main_color"
            app:layout_constraintEnd_toStartOf="@id/interval_3"
            app:layout_constraintStart_toEndOf="@id/interval_2"
            app:layout_constraintTop_toBottomOf="@id/view_title" />

        <View
            android:id="@+id/interval_3"
            android:layout_width="3dp"
            android:layout_height="5dp"
            app:layout_constraintEnd_toStartOf="@id/view_4"
            app:layout_constraintStart_toEndOf="@id/view_3"
            app:layout_constraintTop_toTopOf="@id/view_title" />

        <View
            android:id="@+id/view_4"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:background="@color/main_color"
            app:layout_constraintEnd_toStartOf="@id/interval_4"
            app:layout_constraintStart_toEndOf="@id/interval_3"
            app:layout_constraintTop_toBottomOf="@id/view_title" />

        <View
            android:id="@+id/interval_4"
            android:layout_width="3dp"
            android:layout_height="5dp"
            app:layout_constraintEnd_toStartOf="@id/view_5"
            app:layout_constraintStart_toEndOf="@id/view_4"
            app:layout_constraintTop_toTopOf="@id/view_title" />

        <View
            android:id="@+id/view_5"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:background="@color/main_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/interval_4"
            app:layout_constraintTop_toBottomOf="@id/view_title" />

        <FrameLayout
            android:id="@+id/perfect_information"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/tv_next"
            app:layout_constraintTop_toBottomOf="@id/view_1" />

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="212dp"
            android:layout_height="45dp"
            android:layout_marginBottom="37dp"
            android:background="@drawable/shape_main_23"
            android:gravity="center"
            android:text="@string/next_step"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <View
            android:id="@+id/fake_status_bar_view"
            android:layout_width="match_parent"
            android:layout_height="1px"
            app:layout_constraintTop_toTopOf="parent" />

        <com.meilancycling.mema.ui.home.view.HomeDeviceView
            android:id="@+id/home_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/fake_status_bar_view" />

        <com.lihang.ShadowLayout
            android:id="@+id/sl_first_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            app:hl_cornerRadius_leftBottom="0dp"
            app:hl_cornerRadius_leftTop="23dp"
            app:hl_cornerRadius_rightBottom="0dp"
            app:hl_cornerRadius_rightTop="23dp"
            app:hl_shadowColor="@color/shadow_color"
            app:hl_shadowHiddenBottom="true"
            app:hl_shadowLimit="4dp"
            app:hl_shadowSymmetry="false"
            app:layout_constraintTop_toBottomOf="@id/home_device">

            <com.meilancycling.mema.ui.home.view.SevenTopView
                android:id="@+id/stv_first"
                android:layout_width="match_parent"
                android:layout_height="38dp" />
        </com.lihang.ShadowLayout>

        <com.lihang.ShadowLayout
            android:id="@+id/sl_content_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:visibility="gone"
            app:hl_cornerRadius="23dp"
            app:hl_shadowColor="@color/shadow_color"
            app:hl_shadowLimit="4dp"
            app:hl_shadowSymmetry="false"
            app:layout_constraintTop_toBottomOf="@id/sl_first_show">

            <com.meilancycling.mema.ui.home.view.SevenTopView
                android:id="@+id/stv_content"
                android:layout_width="match_parent"
                android:layout_height="38dp" />
        </com.lihang.ShadowLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/sr_home_record"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sl_content_show">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
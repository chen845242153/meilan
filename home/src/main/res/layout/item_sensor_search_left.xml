<?xml version="1.0" encoding="utf-8"?>
<com.lihang.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginBottom="10dp"
    app:hl_cornerRadius="4dp"
    app:hl_shadowColor="@color/shadow_color"
    app:hl_shadowLimit="4dp"
    app:hl_shadowOffsetY="2dp">

    <RelativeLayout
        android:layout_width="168dp"
        android:layout_height="168dp">

        <ImageView
            android:id="@+id/iv_type_ble"
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/sensor_type_ble" />

        <ImageView
            android:id="@+id/iv_type_ant"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/sensor_type_ant" />

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp" />

        <ImageView
            android:id="@+id/iv_speed"
            android:layout_width="45dp"
            android:layout_height="36dp"
            android:layout_marginStart="39dp"
            android:layout_marginTop="36dp"
            android:src="@drawable/sensor_speed" />

        <ImageView
            android:id="@+id/iv_cadence"
            android:layout_width="45dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="39dp"
            android:src="@drawable/sensor_cadence" />

        <ImageView
            android:id="@+id/iv_sensor"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="41dp" />

        <TextView
            android:id="@+id/tv_wheel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="89dp"
            android:textColor="@color/black_3"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="33dp"
            android:textColor="@color/black_3"
            android:textSize="17sp"
            android:textStyle="bold" />

    </RelativeLayout>
</com.lihang.ShadowLayout>




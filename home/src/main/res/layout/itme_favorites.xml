<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="92dp">

    <ImageView
        android:id="@+id/iv_common_type"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_common_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:textColor="@color/black_6"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_common_type"
        app:layout_constraintStart_toEndOf="@id/iv_common_type"
        app:layout_constraintTop_toTopOf="@id/iv_common_type" />

    <TextView
        android:id="@+id/tv_common_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:maxEms="8"
        android:singleLine="true"
        android:textColor="@color/black_6"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_common_type"
        app:layout_constraintStart_toEndOf="@id/tv_common_time"
        app:layout_constraintTop_toTopOf="@id/iv_common_type" />

    <TextView
        android:id="@+id/tv_common_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black_3"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_common_distance_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="2dp"
        android:textColor="@color/black_6"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_common_distance"
        app:layout_constraintStart_toEndOf="@id/tv_common_distance" />

    <ImageView
        android:id="@+id/iv_time"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="161dp"
        android:src="@drawable/item_time"
        app:layout_constraintBottom_toBottomOf="@id/tv_common_distance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_common_distance">

    </ImageView>

    <TextView
        android:id="@+id/tv_common_during"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:textColor="@color/black_3"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_common_distance"
        app:layout_constraintStart_toEndOf="@id/iv_time"
        app:layout_constraintTop_toTopOf="@id/tv_common_distance">

    </TextView>

    <ImageView
        android:id="@+id/iv_speed"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="87dp"
        android:src="@drawable/item_speed"
        app:layout_constraintBottom_toBottomOf="@id/tv_common_distance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_common_distance" />

    <TextView
        android:id="@+id/tv_common_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:textColor="@color/black_3"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_common_distance"
        app:layout_constraintStart_toEndOf="@id/iv_speed"
        app:layout_constraintTop_toTopOf="@id/tv_common_distance" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/line_colors"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
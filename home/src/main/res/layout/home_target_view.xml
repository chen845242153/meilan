<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.meilancycling.mema.ui.home.view.HomeScheduleView
            android:id="@+id/hsv_distance"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:layout_marginTop="19dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/hsv_time"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/home_distance"
            app:layout_constraintBottom_toBottomOf="@id/hsv_distance"
            app:layout_constraintEnd_toEndOf="@id/hsv_distance"
            app:layout_constraintStart_toStartOf="@id/hsv_distance"
            app:layout_constraintTop_toTopOf="@id/hsv_distance" />

        <TextView
            android:id="@+id/tv_distance_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_3"
            android:textSize="18sp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="@id/hsv_distance"
            app:layout_constraintRight_toLeftOf="@id/tv_distance_unit"
            app:layout_constraintTop_toBottomOf="@id/hsv_distance" />

        <TextView
            android:id="@+id/tv_distance_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="2dp"
            android:gravity="bottom"
            android:textColor="@color/black_9"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_distance_value"
            app:layout_constraintLeft_toRightOf="@id/tv_distance_value"
            app:layout_constraintRight_toRightOf="@id/hsv_distance" />

        <com.meilancycling.mema.ui.home.view.HomeScheduleView
            android:id="@+id/hsv_time"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:layout_marginTop="19dp"
            app:layout_constraintLeft_toRightOf="@id/hsv_distance"
            app:layout_constraintRight_toLeftOf="@id/hsv_cal"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/home_time"
            app:layout_constraintBottom_toBottomOf="@id/hsv_time"
            app:layout_constraintEnd_toEndOf="@id/hsv_time"
            app:layout_constraintStart_toStartOf="@id/hsv_time"
            app:layout_constraintTop_toTopOf="@id/hsv_time" />

        <TextView
            android:id="@+id/tv_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_3"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@id/hsv_time"
            app:layout_constraintStart_toStartOf="@id/hsv_time"
            app:layout_constraintTop_toBottomOf="@id/hsv_time" />

        <com.meilancycling.mema.ui.home.view.HomeScheduleView
            android:id="@+id/hsv_cal"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:layout_marginTop="19dp"
            app:layout_constraintLeft_toRightOf="@id/hsv_time"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerInParent="true"
            android:src="@drawable/home_cal"
            app:layout_constraintBottom_toBottomOf="@id/hsv_cal"
            app:layout_constraintEnd_toEndOf="@id/hsv_cal"
            app:layout_constraintStart_toStartOf="@id/hsv_cal"
            app:layout_constraintTop_toTopOf="@id/hsv_cal" />


        <TextView
            android:id="@+id/tv_cal_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_3"
            android:textSize="18sp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="@id/hsv_cal"
            app:layout_constraintRight_toLeftOf="@id/tv_cal_unit"
            app:layout_constraintTop_toBottomOf="@id/hsv_cal" />

        <TextView
            android:id="@+id/tv_cal_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="2dp"
            android:textColor="@color/black_9"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_cal_value"
            app:layout_constraintLeft_toRightOf="@id/tv_cal_value"
            app:layout_constraintRight_toRightOf="@id/hsv_cal" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/common_status_bar"/>

        <com.meilancycling.mema.customview.CommonTitleView
            android:id="@+id/ctv_share"
            android:layout_width="match_parent"
            android:layout_height="@dimen/titleView_height"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="84" />


        <RelativeLayout
            android:id="@+id/rl_share_bitmap"
            android:layout_width="match_parent"
            android:layout_height="348dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp">

            <ImageView
                android:id="@+id/iv_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


            <ImageView
                android:layout_width="79dp"
                android:layout_height="29dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/share_logo" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_share_type"
                    android:layout_width="20dp"
                    android:layout_height="17dp"
                    android:layout_marginStart="16dp" />

                <TextView
                    android:id="@+id/tv_share_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:textColor="@color/color_f2"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="74dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <com.meilancycling.mema.customview.CusFntTextView
                    android:id="@+id/ctv_share_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="47sp"
                    android:textStyle="bold">

                </com.meilancycling.mema.customview.CusFntTextView>

                <TextView
                    android:id="@+id/ctv_share_distance_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_share_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="13dp"
                        android:text="@string/total_times"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        tools:ignore="SmallSp" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_share_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_share_speed_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="13dp"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        tools:ignore="SmallSp" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_share_cal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="13dp"
                        android:text="@string/total_consume"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        tools:ignore="SmallSp" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="169" />

        <LinearLayout
            android:id="@+id/ll_qq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_down_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="33dp"
                android:src="@drawable/down_image" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_wx"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="33dp"
                android:src="@drawable/wx" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_friends"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="33dp"
                android:src="@drawable/wx_friends" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_qq"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="33dp"
                android:layout_marginEnd="33dp"
                android:src="@drawable/qq" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_down"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="63dp"
                android:src="@drawable/down_image" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_facebook"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="63dp"
                android:src="@drawable/about_facebook" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="77" />
    </LinearLayout>
</layout>
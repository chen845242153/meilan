<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:id="@+id/fake_status_bar_view"
            android:layout_width="match_parent"
            android:layout_height="1px"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_welcome"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fake_status_bar_view" />

        <TextView
            android:id="@+id/tv_skip"
            android:layout_width="55dp"
            android:layout_height="24dp"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shape_line_d2_12"
            android:gravity="center"
            android:text="@string/welcome_skip"
            android:textColor="@color/black_6"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fake_status_bar_view" />

        <View
            android:id="@+id/view_item1"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginStart="57dp"
            android:layout_marginBottom="78dp"
            android:background="@drawable/shape_circle_main"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view_item2"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginStart="9dp"
            android:background="@drawable/shape_circle_e2"
            app:layout_constraintStart_toEndOf="@id/view_item1"
            app:layout_constraintTop_toTopOf="@id/view_item1" />

        <View
            android:id="@+id/view_item3"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginStart="9dp"
            android:background="@drawable/shape_circle_e2"
            app:layout_constraintStart_toEndOf="@id/view_item2"
            app:layout_constraintTop_toTopOf="@id/view_item2" />

        <View
            android:id="@+id/view_item4"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginStart="9dp"
            android:background="@drawable/shape_circle_e2"
            app:layout_constraintStart_toEndOf="@id/view_item3"
            app:layout_constraintTop_toTopOf="@id/view_item3" />

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="71dp"
            android:src="@drawable/arrow_welcome"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="120dp"
            android:layout_height="52dp"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="78dp"
            android:background="@drawable/shape_main_23"
            android:gravity="center"
            android:text="@string/welcome_confirm"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
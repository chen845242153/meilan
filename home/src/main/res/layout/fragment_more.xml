<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/fake_status_bar_view"
                android:layout_width="match_parent"
                android:layout_height="1px"
                app:layout_constraintTop_toTopOf="parent" />

            <com.lihang.ShadowLayout
                android:id="@+id/sl"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                app:hl_cornerRadius="23dp"
                app:hl_shadowColor="@color/shadow_color"
                app:hl_shadowLimit="4dp"
                app:hl_shadowOffsetY="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fake_status_bar_view">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.lihang.ShadowLayout>

            <View
                android:id="@+id/view_bg"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/shape_circle_e2"
                app:layout_constraintStart_toStartOf="@id/sl"
                app:layout_constraintTop_toTopOf="@id/sl" />


            <ImageView
                android:id="@+id/iv_more_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintBottom_toBottomOf="@id/view_bg"
                app:layout_constraintEnd_toEndOf="@id/view_bg"
                app:layout_constraintStart_toStartOf="@id/view_bg"
                app:layout_constraintTop_toTopOf="@id/view_bg" />

            <ImageView
                android:id="@+id/iv_login_type"
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:layout_constraintBottom_toBottomOf="@id/iv_more_avatar"
                app:layout_constraintEnd_toEndOf="@id/iv_more_avatar" />


            <TextView
                android:id="@+id/tv_more_nickName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:textColor="@color/black_3"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/view_bg"
                app:layout_constraintTop_toTopOf="@id/view_bg" />

            <TextView
                android:id="@+id/tv_more_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="@color/black_6"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@id/view_bg"
                app:layout_constraintStart_toStartOf="@id/tv_more_nickName"
                tools:ignore="SmallSp" />

            <ImageView
                android:id="@+id/iv_favorites"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="42dp"
                android:layout_marginBottom="48dp"
                android:src="@drawable/more_favorites"
                app:layout_constraintBottom_toBottomOf="@id/sl"
                app:layout_constraintEnd_toStartOf="@id/iv_competition"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="@id/sl" />

            <ImageView
                android:id="@+id/iv_competition"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="48dp"
                android:src="@drawable/more_competition"
                app:layout_constraintBottom_toBottomOf="@id/sl"
                app:layout_constraintEnd_toStartOf="@id/iv_add_activity"
                app:layout_constraintStart_toEndOf="@id/iv_favorites" />

            <ImageView
                android:id="@+id/iv_add_activity"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="42dp"
                android:layout_marginBottom="48dp"
                android:src="@drawable/more_add_activity"
                app:layout_constraintBottom_toBottomOf="@id/sl"
                app:layout_constraintEnd_toEndOf="@id/sl"
                app:layout_constraintStart_toEndOf="@id/iv_competition" />

            <TextView
                android:id="@+id/tv_favorites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/my_favorites"
                android:textColor="@color/black_3"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@id/iv_favorites"
                app:layout_constraintStart_toStartOf="@id/iv_favorites"
                app:layout_constraintTop_toBottomOf="@id/iv_favorites" />

            <TextView
                android:id="@+id/tv_competition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/competition"
                android:textColor="@color/black_3"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@id/iv_competition"
                app:layout_constraintStart_toStartOf="@id/iv_competition"
                app:layout_constraintTop_toBottomOf="@id/iv_competition" />

            <TextView
                android:id="@+id/tv_add_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/add_activity"
                android:textColor="@color/black_3"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@id/iv_add_activity"
                app:layout_constraintStart_toStartOf="@id/iv_add_activity"
                app:layout_constraintTop_toBottomOf="@id/iv_add_activity" />

            <com.lihang.ShadowLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:hl_cornerRadius="23dp"
                app:hl_shadowColor="@color/shadow_color"
                app:hl_shadowLimit="4dp"
                app:hl_shadowOffsetY="2dp"
                app:layout_constraintTop_toBottomOf="@id/sl">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_unit"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:layout_marginStart="19dp"
                            android:src="@drawable/home_unit" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="9dp"
                            android:layout_weight="1"
                            android:text="@string/unit_setting"
                            android:textColor="@color/black_3"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_unit_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_9"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="13dp"
                            android:src="@drawable/item_arrow_right" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@color/line_colors" />

                    <LinearLayout
                        android:id="@+id/ll_share"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:layout_marginStart="19dp"
                            android:src="@drawable/home_share" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="9dp"
                            android:layout_weight="1"
                            android:text="@string/activity_sharing"
                            android:textColor="@color/black_3"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/setting_strava" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="7dp"
                            android:src="@drawable/setting_kom" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="7dp"
                            android:src="@drawable/setting_tp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="13dp"
                            android:src="@drawable/item_arrow_right" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@color/line_colors" />

                    <com.meilancycling.mema.ui.home.view.MoreItemView
                        android:id="@+id/miv_hrm"
                        android:layout_width="match_parent"
                        android:layout_height="55dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@color/line_colors" />

                    <com.meilancycling.mema.ui.home.view.MoreItemView
                        android:id="@+id/miv_power"
                        android:layout_width="match_parent"
                        android:layout_height="55dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@color/line_colors" />

                    <com.meilancycling.mema.ui.home.view.MoreItemView
                        android:id="@+id/miv_target"
                        android:layout_width="match_parent"
                        android:layout_height="55dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="@color/color_f2" />

                    <com.meilancycling.mema.ui.home.view.MoreItemView
                        android:id="@+id/miv_account"
                        android:layout_width="match_parent"
                        android:layout_height="58dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@color/line_colors" />

                    <com.meilancycling.mema.ui.home.view.MoreItemView
                        android:id="@+id/miv_help"
                        android:layout_width="match_parent"
                        android:layout_height="58dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@color/line_colors" />

                    <com.meilancycling.mema.ui.home.view.MoreItemView
                        android:id="@+id/miv_about_us"
                        android:layout_width="match_parent"
                        android:layout_height="58dp" />
                </LinearLayout>
            </com.lihang.ShadowLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
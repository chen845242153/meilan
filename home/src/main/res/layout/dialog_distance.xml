<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:layout_marginStart="48dp"
    android:layout_marginEnd="48dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginBottom="5dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:text="@string/odo"
            android:textColor="@color/black_3"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_distance_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_6"
            android:textSize="11sp"
            tools:ignore="SmallSp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="11dp"
        android:background="@color/line_colors" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/wp_distance_item1"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:background="@null"
            app:wheel_item_text_color="@color/black_3"
            app:wheel_item_text_size="16sp" />

        <View
            android:layout_width="30dp"
            android:layout_height="match_parent" />

        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/wp_distance_item2"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            app:wheel_item_text_color="@color/black_3"
            app:wheel_item_text_size="16sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_distance_confirm"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_gravity="end"
        android:gravity="center"
        android:text="@string/odo_finish"
        android:textColor="@color/main_color"
        android:textSize="14sp" />
</LinearLayout>
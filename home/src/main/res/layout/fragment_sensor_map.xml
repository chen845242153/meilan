<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:mapbox="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/sensor_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            mapbox:mapbox_uiLogo="false" />

        <View
            android:id="@+id/view_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shape_circle_white"
            mapbox:layout_constraintBottom_toBottomOf="parent"
            mapbox:layout_constraintEnd_toEndOf="parent"
            mapbox:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/sensor_map_back"
            mapbox:layout_constraintBottom_toBottomOf="@id/view_back"
            mapbox:layout_constraintEnd_toEndOf="@id/view_back"
            mapbox:layout_constraintStart_toStartOf="@id/view_back"
            mapbox:layout_constraintTop_toTopOf="@id/view_back" />

        <View
            android:id="@+id/view_bottom"
            android:layout_width="0dp"
            android:layout_height="116dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/shape_white_10"
            mapbox:layout_constraintBottom_toBottomOf="parent"
            mapbox:layout_constraintEnd_toEndOf="parent"
            mapbox:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_speed_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/speed"
            android:textColor="@color/black_6"
            android:textSize="14sp"
            mapbox:layout_constraintStart_toStartOf="@id/view_bottom"
            mapbox:layout_constraintTop_toTopOf="@id/view_bottom" />

        <TextView
            android:id="@+id/tv_speed_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_9"
            android:textSize="14sp"
            mapbox:layout_constraintBottom_toBottomOf="@id/tv_speed_title"
            mapbox:layout_constraintStart_toEndOf="@id/tv_speed_title"
            mapbox:layout_constraintTop_toTopOf="@id/tv_speed_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/time"
            mapbox:layout_constraintEnd_toEndOf="@id/view_bottom"
            mapbox:layout_constraintStart_toStartOf="@id/view_bottom"
            mapbox:layout_constraintTop_toTopOf="@id/view_bottom" />

        <TextView
            android:id="@+id/tv_distance_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textColor="@color/black_9"
            android:textSize="14sp"
            mapbox:layout_constraintEnd_toEndOf="@id/view_bottom"
            mapbox:layout_constraintTop_toTopOf="@id/tv_speed_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/distance"
            android:textColor="@color/black_6"
            android:textSize="14sp"
            mapbox:layout_constraintEnd_toStartOf="@id/tv_distance_unit"
            mapbox:layout_constraintTop_toTopOf="@id/view_bottom" />

        <com.meilancycling.mema.customview.CusFntTextView
            android:id="@+id/ctv_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black_3"
            android:textSize="36sp"
            mapbox:layout_constraintBottom_toBottomOf="@id/view_bottom"
            mapbox:layout_constraintStart_toStartOf="@id/view_bottom" />

        <com.meilancycling.mema.customview.CusFntTextView
            android:id="@+id/ctv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black_3"
            android:textSize="36sp"
            mapbox:layout_constraintBottom_toBottomOf="@id/view_bottom"
            mapbox:layout_constraintEnd_toEndOf="@id/view_bottom"
            mapbox:layout_constraintStart_toStartOf="@id/view_bottom" />

        <com.meilancycling.mema.customview.CusFntTextView
            android:id="@+id/ctv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black_3"
            android:textSize="36sp"
            mapbox:layout_constraintBottom_toBottomOf="@id/view_bottom"
            mapbox:layout_constraintEnd_toEndOf="@id/view_bottom" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:layout_marginStart="48dp"
    android:layout_marginEnd="48dp"
    android:background="@drawable/shape_white_4">

    <View
        android:id="@+id/view_left"
        android:layout_width="1dp"
        android:layout_height="54dp"
        android:background="@color/line_colors"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/view_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_right"
        android:layout_width="1dp"
        android:layout_height="54dp"
        android:background="@color/line_colors"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/view_left"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_delete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/view_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_save"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/view_right"
        app:layout_constraintStart_toEndOf="@id/view_left"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_continue"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginTop="42dp"
        android:src="@drawable/sensor_delete"
        app:layout_constraintEnd_toStartOf="@id/view_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="@string/give_up"
        android:textColor="@color/black_3"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/iv_delete"
        app:layout_constraintStart_toStartOf="@id/iv_delete"
        app:layout_constraintTop_toBottomOf="@id/iv_delete" />

    <ImageView
        android:id="@+id/iv_save"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginTop="42dp"
        android:src="@drawable/sensor_save"
        app:layout_constraintEnd_toStartOf="@id/view_right"
        app:layout_constraintStart_toEndOf="@id/view_left"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="@string/save"
        android:textColor="@color/black_3"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/iv_save"
        app:layout_constraintStart_toStartOf="@id/iv_save"
        app:layout_constraintTop_toBottomOf="@id/iv_save" />

    <ImageView
        android:id="@+id/iv_continue"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginTop="42dp"
        android:src="@drawable/sensor_continue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_right"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="@string/restore"
        android:textColor="@color/black_3"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/iv_continue"
        app:layout_constraintStart_toStartOf="@id/iv_continue"
        app:layout_constraintTop_toBottomOf="@id/iv_continue" />
</androidx.constraintlayout.widget.ConstraintLayout>
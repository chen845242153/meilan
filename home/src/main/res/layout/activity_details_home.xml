<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <View
            android:id="@+id/fake_status_bar_view"
            android:layout_width="match_parent"
            android:layout_height="1px"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_top"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/titleView_height"
            app:layout_constraintTop_toBottomOf="@id/fake_status_bar_view" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/back"
            app:layout_constraintBottom_toTopOf="@id/view_top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fake_status_bar_view" />

        <View
            android:id="@+id/view_back"
            android:layout_width="50dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/view_top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fake_status_bar_view" />

        <TextView
            android:id="@+id/tv_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/view_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fake_status_bar_view" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="55dp"
            android:src="@drawable/details_share"
            app:layout_constraintBottom_toTopOf="@id/view_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fake_status_bar_view" />

        <View
            android:id="@+id/view_share"
            android:layout_width="50dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/view_top"
            app:layout_constraintEnd_toStartOf="@id/view_more"
            app:layout_constraintTop_toBottomOf="@id/fake_status_bar_view" />

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/details_more"
            app:layout_constraintBottom_toTopOf="@id/view_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fake_status_bar_view" />

        <View
            android:id="@+id/view_more"
            android:layout_width="45dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/view_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fake_status_bar_view" />


        <View
            android:id="@+id/view_bottom"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="55dp"
            android:background="@color/line_colors"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View
            android:id="@+id/view_1"
            android:layout_width="22dp"
            android:layout_height="5dp"
            android:layout_marginBottom="16dp"
            android:background="@color/main_color"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/iv_details_1"
            app:layout_constraintStart_toStartOf="@id/iv_details_1" />

        <View
            android:id="@+id/view_2"
            android:layout_width="22dp"
            android:layout_height="5dp"
            android:layout_marginBottom="16dp"
            android:background="@color/main_color"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/iv_details_2"
            app:layout_constraintStart_toStartOf="@id/iv_details_2" />

        <View
            android:id="@+id/view_3"
            android:layout_width="22dp"
            android:layout_height="5dp"
            android:layout_marginBottom="16dp"
            android:background="@color/main_color"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/iv_details_3"
            app:layout_constraintStart_toStartOf="@id/iv_details_3" />

        <ImageView
            android:id="@+id/iv_details_1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_details_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_bottom" />

        <ImageView
            android:id="@+id/iv_details_2"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_details_3"
            app:layout_constraintStart_toEndOf="@id/iv_details_1"
            app:layout_constraintTop_toBottomOf="@id/view_bottom" />

        <ImageView
            android:id="@+id/iv_details_3"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_details_2"
            app:layout_constraintTop_toBottomOf="@id/view_bottom" />


        <View
            android:id="@+id/view_click_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/view_click_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_bottom" />

        <View
            android:id="@+id/view_click_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/view_click_3"
            app:layout_constraintStart_toEndOf="@id/view_click_1"
            app:layout_constraintTop_toBottomOf="@id/view_bottom" />

        <View
            android:id="@+id/view_click_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/view_click_2"
            app:layout_constraintTop_toBottomOf="@id/view_bottom" />

        <View
            android:id="@+id/view_guide"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/guide_bg"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/view_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fake_status_bar_view" />

        <View
            android:id="@+id/view_guide_bottom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/guide_bg"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_bottom" />

        <FrameLayout
            android:id="@+id/record_details"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/titleView_height"
            app:layout_constraintBottom_toTopOf="@id/view_bottom"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

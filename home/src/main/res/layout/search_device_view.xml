<com.lihang.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sl_search_device"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:hl_cornerRadius="23dp"
    app:hl_shadowColor="@color/shadow_color"
    app:hl_shadowLimit="4dp"
    app:hl_shadowOffsetY="2dp">

    <RelativeLayout
        android:layout_width="166dp"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:layout_height="166dp">

        <ImageView
            android:id="@+id/iv_device"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp" />

        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:textColor="@color/black_3"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_device_rssi"
            android:layout_width="15dp"
            android:layout_height="11dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp" />

        <ImageView
            android:id="@+id/iv_device_type"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp" />
    </RelativeLayout>
</com.lihang.ShadowLayout>

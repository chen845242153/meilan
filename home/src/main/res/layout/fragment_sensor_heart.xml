                        app:layout_constraintBottom_toBottomOf="@id/view_zone_2"
                        app:layout_constraintStart_toEndOf="@id/view_zone_2"
                        app:layout_constraintTop_toTopOf="@id/view_zone_2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="@string/zone_1"
                        android:textColor="@color/black_3"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/view_zone_1"
                        app:layout_constraintStart_toEndOf="@id/view_zone_1"

                        app:layout_constraintTop_toTopOf="@id/view_zone_5" />

                    <TextView
                        android:id="@+id/tv_time_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="59dp"
                        android:textColor="@color/black_3"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/view_zone_4"
                        app:layout_constraintStart_toEndOf="@id/view_zone_4"
                        app:layout_constraintTop_toTopOf="@id/view_zone_4" />

                    <TextView
                        android:id="@+id/tv_time_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="59dp"
                        android:textColor="@color/black_3"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/view_zone_3"
                        app:layout_constraintStart_toEndOf="@id/view_zone_3"
                        app:layout_constraintTop_toTopOf="@id/view_zone_3" />

                    <TextView
                        android:id="@+id/tv_time_2"

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.meilancycling.mema.ui.sensor.SensorBottomModel" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view_back"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="21dp"
            android:background="@drawable/shape_circle_f2"
            android:visibility="@{model.sportStatus==0?View.VISIBLE:View.GONE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/sensor_back"
            android:visibility="@{model.sportStatus==0?View.VISIBLE:View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/view_back"
            app:layout_constraintEnd_toEndOf="@id/view_back"
            app:layout_constraintStart_toStartOf="@id/view_back"
            app:layout_constraintTop_toTopOf="@id/view_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/back"
            android:textColor="@color/black_3"
            android:textSize="11sp"
            android:visibility="@{model.sportStatus==0?View.VISIBLE:View.GONE}"
            app:layout_constraintEnd_toEndOf="@id/iv_back"
            app:layout_constraintStart_toStartOf="@id/iv_back"
            app:layout_constraintTop_toBottomOf="@id/iv_back"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/tv_start"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/shape_circle_main"
            android:gravity="center"
            android:text="@string/start"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="@{model.sportStatus==0?View.VISIBLE:View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_sport_type"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="55dp"
            android:background="@drawable/shape_circle_f2"
            android:visibility="@{model.sportStatus==0?View.VISIBLE:View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_type"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@{model.sportType==0?@drawable/sensor_type_1:@drawable/sensor_type_2}"
            android:visibility="@{model.sportStatus==0?View.VISIBLE:View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/view_sport_type"
            app:layout_constraintEnd_toEndOf="@id/view_sport_type"
            app:layout_constraintStart_toStartOf="@id/view_sport_type"
            app:layout_constraintTop_toTopOf="@id/view_sport_type" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@{model.sportType==0?@string/indoor:@string/outdoor}"
            android:textColor="@color/black_3"
            android:textSize="11sp"
            android:visibility="@{model.sportStatus==0?View.VISIBLE:View.GONE}"
            app:layout_constraintEnd_toEndOf="@id/iv_type"
            app:layout_constraintStart_toStartOf="@id/iv_type"
            app:layout_constraintTop_toBottomOf="@id/iv_type"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/tv_lap_number"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="21dp"
            android:background="@drawable/lap_bg"
            android:gravity="center"
            android:text="@{String.valueOf(model.lapNumber)}"
            android:textColor="@color/black_3"
            android:textSize="19sp"
            android:textStyle="bold"
            android:visibility="@{model.sportStatus==1?View.VISIBLE:View.GONE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/road_section"
            android:textColor="@color/black_3"
            android:textSize="12sp"
            android:visibility="@{model.sportStatus==1?View.VISIBLE:View.GONE}"
            app:layout_constraintEnd_toEndOf="@id/tv_lap_number"
            app:layout_constraintStart_toStartOf="@id/tv_lap_number"
            app:layout_constraintTop_toBottomOf="@id/tv_lap_number" />

        <ImageView
            android:id="@+id/iv_sensor_pause"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/sensor_pause"
            android:visibility="@{model.sportStatus==1?View.VISIBLE:View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_sensor_start"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/sensor_start"
            android:visibility="@{model.sportStatus==2?View.VISIBLE:View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_stop"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="21dp"
            android:src="@drawable/sensor_stop"
            android:visibility="@{model.sportStatus==2?View.VISIBLE:View.GONE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/stop"
            android:textColor="@color/black_3"
            android:textSize="12sp"
            android:visibility="@{model.sportStatus==2?View.VISIBLE:View.GONE}"
            app:layout_constraintEnd_toEndOf="@id/iv_stop"
            app:layout_constraintStart_toStartOf="@id/iv_stop"
            app:layout_constraintTop_toBottomOf="@id/iv_stop" />

        <ImageView
            android:id="@+id/iv_sensor_lock"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="55dp"
            android:src="@drawable/sensor_lock"
            android:visibility="@{model.sportStatus!=0?View.VISIBLE:View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/lock"
            android:textColor="@color/black_3"
            android:textSize="12sp"
            android:visibility="@{model.sportStatus!=0?View.VISIBLE:View.GONE}"
            app:layout_constraintEnd_toEndOf="@id/iv_sensor_lock"
            app:layout_constraintStart_toStartOf="@id/iv_sensor_lock"
            app:layout_constraintTop_toBottomOf="@id/iv_sensor_lock" />


        <View
            android:id="@+id/view_lock"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:visibility="@{model.lock?View.VISIBLE:View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.meilancycling.mema.ui.sensor.view.SlideUnlockView
            android:id="@+id/suv"
            android:layout_width="206dp"
            android:layout_height="38dp"
            android:layout_marginTop="26dp"
            android:visibility="@{model.lock?View.VISIBLE:View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
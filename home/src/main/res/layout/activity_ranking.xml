<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            app:layout_constraintDimensionRatio="h,16:7"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="52dp"
            android:src="@drawable/news_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_bg" />

        <View
            android:id="@+id/view_bottom"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="#4D000000"
            app:layout_constraintBottom_toBottomOf="@id/iv_bg" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/view_bottom"
            app:layout_constraintEnd_toEndOf="@id/view_bottom"
            app:layout_constraintStart_toStartOf="@id/view_bottom"
            app:layout_constraintTop_toTopOf="@id/view_bottom" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shape_blue_5"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/view_bottom"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_exit_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/edit_text_bottom"
            android:text="@string/exit_activity"
            android:textColor="@color/black_9"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_bottom" />

        <View
            android:id="@+id/view_exit"
            android:layout_width="80dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_exit_activity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_exit_activity" />

        <ImageView
            android:id="@+id/iv_person"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="19dp"
            android:src="@drawable/rank_person"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_bg" />

        <TextView
            android:id="@+id/tv_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/ranking_person"
            android:textColor="@color/black_6"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_person"
            app:layout_constraintStart_toEndOf="@id/iv_person"
            app:layout_constraintTop_toTopOf="@id/iv_person" />

        <com.meilancycling.mema.customview.CusFntTextView
            android:id="@+id/ctv_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_3"
            android:textSize="26sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_person"
            app:layout_constraintStart_toEndOf="@id/tv_person"
            app:layout_constraintTop_toTopOf="@id/iv_person" />

        <ImageView
            android:id="@+id/iv_current_ranking"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/current_ranking"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_person" />

        <TextView
            android:id="@+id/tv_current_ranking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/current_ranking"
            android:textColor="@color/black_6"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_current_ranking"
            app:layout_constraintStart_toEndOf="@id/iv_current_ranking"
            app:layout_constraintTop_toTopOf="@id/iv_current_ranking" />

        <com.meilancycling.mema.customview.CusFntTextView
            android:id="@+id/ctv_ranking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_3"
            android:textSize="26sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_current_ranking"
            app:layout_constraintStart_toEndOf="@id/tv_current_ranking"
            app:layout_constraintTop_toTopOf="@id/iv_current_ranking" />


        <View
            android:id="@+id/view_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="15dp"
            android:background="@color/color_f2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_current_ranking" />

        <ImageView
            android:id="@+id/iv_ranking_list"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ranking_list"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/ranking_list"
            android:textColor="@color/black_6"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_ranking_list"
            app:layout_constraintStart_toEndOf="@id/iv_ranking_list"
            app:layout_constraintTop_toTopOf="@id/iv_ranking_list" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_ranking_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_ranking_list" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>